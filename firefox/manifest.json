{
    "manifest_version": 2,
    "name": "SnipThat.io",
    "description": "Save interesting snippets that you find on the web",
    "version": "1.0.1",
    "homepage_url": "https://snipthat.io",
    "action": {},

    "icons": {
        "48": "icons/clipboard-48.png"
    },

    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/clipboard-48.png",
        "default_title": "Snipthat",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>"
  ]
}
